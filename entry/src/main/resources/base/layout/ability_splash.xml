<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:multiple_lines="true"
        ohos:start_margin="24vp"
        ohos:end_margin="24vp"
        ohos:top_margin="56vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Location in Background Permission not granted"
        ohos:text_size="16vp"
        />

    <Text
        ohos:top_margin="8vp"
        ohos:multiple_lines="true"
        ohos:start_margin="16vp"
        ohos:end_margin="16vp"
        ohos:text_alignment="horizontal_center"
        ohos:hint="Grant location permission always in app setting."
        ohos:height="match_content"
        ohos:width="match_parent"/>

    <Text
        ohos:padding="8vp"
        ohos:top_margin="16vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="$graphic:default_button"
        ohos:text="Goto App Settings"
        ohos:id="$+id:t_ability_splash_app_setting"
        ohos:height="match_content"
        ohos:width="match_content"/>

</DirectionalLayout>