<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    ohos:id="$+id:s_ability_main"
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:rebound_effect="true"
    ohos:focusable="focus_enable"
    ohos:focusable_in_touch="true"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:top_padding="8vp"
        ohos:bottom_padding="16vp"
        ohos:height="match_content"
        ohos:width="match_parent">

        <Text
            ohos:top_margin="24vp"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:text="Push Token"
            ohos:text_size="16vp"
            />

        <Text
            ohos:top_margin="4vp"
            ohos:multiple_lines="true"
            ohos:text_alignment="horizontal_center"
            ohos:start_padding="16vp"
            ohos:end_padding="16vp"
            ohos:hint="Token"
            ohos:id="$+id:t_ability_main_push"
            ohos:height="match_parent"
            ohos:width="match_parent"/>

        <Text
            ohos:top_margin="24vp"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:text="Last Location"
            ohos:text_size="16vp"
            />

        <Text
            ohos:top_margin="4vp"
            ohos:multiple_lines="true"
            ohos:text_alignment="horizontal_center"
            ohos:start_padding="16vp"
            ohos:end_padding="16vp"
            ohos:hint="Last fetched Location"
            ohos:id="$+id:t_ability_main_location"
            ohos:height="match_parent"
            ohos:width="match_parent"/>

    </DirectionalLayout>

</ScrollView>